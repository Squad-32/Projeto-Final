package mvc_model;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.JoinColumn;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@NoArgsConstructor
@AllArgsConstructor
@Entity
@Table(name = "Contatos")
public class Contatos {
    
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private long id;
    private String nome;
    private String email;
    private String telefone;
    private String mensagem;

    @ManyToOne
    @JoinColumn(name = "fk_Usuarios_id_usuario", nullable = true) // Ajustar conforme o nome da coluna na tabela do banco de dados
    private Usuarios usuario;

    // toString
    @Override
    public String toString() {
        return "Contato [id=" + id + ", nome=" + nome + ", email=" + email + ", telefone=" + telefone + ", mensagem=" + mensagem + ", usuario=" + usuario + "]";
    }
}
