package mvc_model;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.JoinColumn;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@NoArgsConstructor // Criação de objeto sem passar argumentos
@AllArgsConstructor
@Entity
@Table(name = "Contatos")
public class Contatos {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private long id;
    private String nome;
    private String email;
    private String telefone;
    private String mensagem;

    @ManyToOne // Relacionamento muitos-para-um com Usuarios
    @JoinColumn(name = "fk_Usuarios_id_usuario") // Chave estrangeira
    private Usuarios usuario; // Referência ao usuário relacionado

    // toString
    @Override
    public String toString() {
        return "Contatos [id=" + id + ", nome=" + nome + ", email=" + email + 
               ", telefone=" + telefone + ", mensagem=" + mensagem + 
               ", usuario=" + usuario + "]";
    }
}